<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ios_bar_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView style="@style/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/card_title"
                    android:text="@string/ios_bar" />

                <CheckBox
                    android:id="@+id/landscape_ios_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/landscape" />

                <CheckBox
                    android:id="@+id/portrait_ios_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/portrait" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="80dp"
                    android:text="向左滑动：" />

                <Button
                    android:id="@+id/ios_bar_slide_left"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="80dp"
                    android:text="向右滑动：" />

                <Button
                    android:id="@+id/ios_bar_slide_right"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="80dp"
                    android:text="向上滑动：" />

                <Button
                    android:id="@+id/ios_bar_slide_up"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="80dp"
                    android:text="上滑悬停：" />

                <Button
                    android:id="@+id/ios_bar_slide_up_hover"
                    style="@style/btn_handler_picker"
                    android:text="@string/edge_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="横屏宽度/颜色" />

                <SeekBar
                    android:id="@+id/ios_bar_width_landscape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_landscape"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="竖屏宽度/颜色" />

                <SeekBar
                    android:id="@+id/ios_bar_width_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_portrait"
                    style="@style/btn_color_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="淡出不透明度" />

                <SeekBar
                    android:id="@+id/ios_bar_alpha_fadeout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:min="0"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_fadeout"
                    style="@style/btn_color_picker" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="阴影效果" />

                <SeekBar
                    android:id="@+id/ios_bar_size_shadow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="6"
                    android:min="0"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />

                <Button
                    android:id="@+id/ios_bar_color_shadow"
                    style="@style/btn_color_picker" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="底部间距" />

                <SeekBar
                    android:id="@+id/ios_bar_total_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="30"
                    android:min="0"
                    android:layout_marginRight="30dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="线条粗细" />

                <SeekBar
                    android:id="@+id/ios_bar_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="12"
                    android:min="0"
                    android:layout_marginRight="30dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
